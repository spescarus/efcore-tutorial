@page "/courses/{id:long}/details"
@model WebApp.Pages.Courses.DetailsModel
@{
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Course Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseId)
        </dd>
        <dt class="col-sm-2">
