@page "/instructors/{id:long}/delete"
@model WebApp.Pages.Instructors.DeleteModel
@{
}

<h1>Delete</h1>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Instructor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InstructorDetails.LastName)
        </dd>
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InstructorDetails.FirstMidName)
        </dd>
        <dt class="col-sm-2">
            Hire Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InstructorDetails.HireDate)
        </dd>
    </dl>

    <form asp-page="./Delete" asp-antiforgery="true">
        <input type="hidden" asp-for="@Model.InstructorDetails.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
